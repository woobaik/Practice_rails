<div class="row">
  <div class="col-sm-12">
    <%= form_for(@user, html: { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :username %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :username, class: "form-control", placeholder:"Username", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :email %>
        </div>
        <div class="col-sm-10">
          <%= f.email_field :email, class:"form-control", placeholder: "E-mail" %>
        </div>

      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :password %>
        </div>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", placeholder:"Password"%>
        </div>
      </div>

          <!-- need to make sure model validates @article.title  -->
        <% if @user.username.nil? || @user.username.empty? %>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Sign Up", class: "btn btn-primary btn-lg"%>
            </div>
          </div>
        <% else %>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Edit Your Profile", class: "btn btn-primary btn-lg" %>
            </div>
          </div>
          <% end %>
    <% end %>
      <div class="col-xs-4 col-xs-offset-4">
        [<%= link_to "Cancel request and return to articles listing", articles_path %>]
      </div>

  </div>
</div>
