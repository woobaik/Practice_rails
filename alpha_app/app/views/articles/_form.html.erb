<div class="row">
  <div class="col-sm-12">
    <%= form_for(@article, html: { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :title %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control", placeholder:"Title for Article", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :description %>
        </div>
        <div class="col-sm-10">
          <%= f.text_area :description, class:"form-control", rows: 10, placeholder: "Description for The Article" %>
        </div>

      </div>

          <!-- need to make sure model validates @article.title  -->
        <% if @article.title.nil? || @article.title.empty? %>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Creat an Article", class: "btn btn-primary btn-lg"%>
            </div>
          </div>
        <% else %>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Edit Your Article", class: "btn btn-primary btn-lg" %>
            </div>
          </div>
          <% end %>
    <% end %>
      <div class="col-xs-4 col-xs-offset-4">
        [<%= link_to "Cancel request and return to articles listing", articles_path %>]
      </div>

  </div>
</div>
